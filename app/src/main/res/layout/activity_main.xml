<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/testtest"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:elevation="7dp">

        <FrameLayout
            android:id="@+id/main_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <ImageSwitcher
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/lamp_switcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_below="@id/lamp_switcher"
                    android:layout_margin="20dp"
                    android:background="@color/colorAccent"
                    android:id="@+id/beacons_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SÄTT PÅ"
                    android:layout_centerHorizontal="true"
                    />
                <!-- TODO: Update blank fragment layout -->
                <FrameLayout
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/beacons_button"
                    android:id="@+id/show_frame"
                    android:layout_width="match_parent"
                    android:layout_height="450dp">
                    <TextView
                        android:textAlignment="center"
                        android:id="@+id/show_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/showinfo"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp" />
                </FrameLayout>
            </RelativeLayout>
        </FrameLayout>
        <ListView
            android:id="@+id/navList"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|start"
            android:background="@color/colorAccent"
            />
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>